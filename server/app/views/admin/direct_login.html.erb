<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Direct Authentication</title>
  <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.1/dist/js.cookie.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    .container {
      text-align: center;
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      max-width: 500px;
    }
    .logo {
      width: 80px;
      margin-bottom: 20px;
    }
    .spinner {
      border: 4px solid rgba(0,0,0,0.1);
      width: 36px;
      height: 36px;
      border-radius: 50%;
      border-left-color: #3b82f6;
      animation: spin 1s linear infinite;
      margin: 20px auto;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>
<body>
  <div class="container">
    <img src="/logo.png" alt="Logo" class="logo">
    <h2>Direct Authentication</h2>
    <p>Setting up your session as <%= @user_email %></p>
    <div class="spinner"></div>
    <p class="message">Authenticating...</p>
    
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Get the token from embedded Ruby variable
        const token = "<%= @token %>";
        const userInfo = <%= raw(@user_info) %>;
        
        // Function to set up auth tokens
        function setupAuth() {
          try {
            // Determine if we're on HTTPS
            const isSecure = window.location.protocol === 'https:';
            
            // Set auth token in cookie
            document.cookie = `authToken=${token}; path=/; max-age=86400; SameSite=Lax${isSecure ? '; Secure' : ''}`;
            
            // Also set in localStorage
            localStorage.setItem('authToken', token);
            localStorage.setItem('bypassAuthOnLoad', 'true');
            localStorage.setItem('directAuthLogin', 'true');
            localStorage.setItem('directAuthTimestamp', Date.now().toString());
            
            // Setup impersonation context
            localStorage.setItem('impersonatedUser', JSON.stringify(userInfo));
            localStorage.setItem('isImpersonating', 'true');
            
            document.querySelector('.message').textContent = "Authenticated! Redirecting...";
            
            // Redirect to home page with special params
            setTimeout(() => {
              window.location.href = "<%= @frontend_url %>/?forceAuth=true&directAuth=true&ts=" + Date.now();
            }, 1500);
          } catch (error) {
            console.error('Authentication error:', error);
            document.querySelector('.message').textContent = "Authentication failed: " + error.message;
          }
        }
        
        // Execute auth setup after a short delay
        setTimeout(setupAuth, 500);
      });
    </script>
  </div>
</body>
</html>
